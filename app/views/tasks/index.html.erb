<h2>Taskleaf</h2>
<h1>タスク一覧</h1>

<table>
  <tr>
    <h3><th>名称</th></h3>
    <h3><th>詳しい説明</th></h3>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.description %></td>

    <td><%= link_to '詳細', task_path(task.id) %></td>
  </tr>
<% end %>
</table> 
<%= link_to '新規登録',new_task_path %>